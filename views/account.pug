extends layout.pug

block content
  section#account.row.content(role='region')
    .col-12
      h2 Account Info
      form#account-form(role='form')
        label(for='first-name') first name:
        input#first-name.form-input-disabled(type='text', name='firstName', value=account.firstName, disabled='true')
        label(for='last-name') last name:
        input#last-name.form-input-disabled(type='text', name='lastName', value=account.lastName, disabled='true')
        label(for='email') email:
        input#email.form-input-disabled(type='email', name='email', value=account.email, disabled='true')
        a.button(href='/account/edit') edit
